{
  "$ref": "#/definitions/Settings",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Settings": {
      "additionalProperties": false,
      "properties": {
        "want": {
          "description": "Pick a list up to 5 numbers between -1 and 2048",
          "items": {
            "$ref": "#/definitions/UserChoice"
          },
          "maxItems": 5,
          "type": "array"
        },
        "whatever": {
          "const": true,
          "type": "boolean"
        },
        "you": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "whatever",
        "you"
      ],
      "type": "object"
    },
    "User": {
      "enum": [
        "developer",
        "administrator",
        "operator"
      ],
      "type": "string"
    },
    "UserChoice": {
      "anyOf": [
        {
          "$ref": "#/definitions/UserChoiceNumber"
        },
        {
          "$ref": "#/definitions/UserChoiceWord"
        }
      ]
    },
    "UserChoiceNumber": {
      "maximum": 2048,
      "minimum": -1,
      "multipleOf": 1,
      "type": "number"
    },
    "UserChoiceWord": {
      "maxLength": 8,
      "type": "string"
    }
  }
}
